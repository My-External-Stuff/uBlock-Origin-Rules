# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true

[*.html]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.py]
trim_trailing_whitespace = false

[*.sh]
trim_trailing_whitespace = false

[*.{txt,rst}]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2
tab_width = 2
